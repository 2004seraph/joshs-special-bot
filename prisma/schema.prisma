generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Nickname {
  id        Int      @id @default(autoincrement())
  guildId   Int
  userId    Int
  nickname  String   @db.VarChar(255)
  createdAt DateTime @default(now()) @db.Timestamp(6)
}